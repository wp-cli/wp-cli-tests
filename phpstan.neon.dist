includes:
  - extension.neon
parameters:
  level: 6
  paths:
    - src
    - tests
  excludePaths:
    - tests/data
  scanDirectories:
    - vendor/wp-cli/wp-cli
    - vendor/phpunit/php-code-coverage
    - vendor/behat/behat
  scanFiles:
    - tests/phpstan/scan-files.php
  treatPhpDocTypesAsCertain: false
  dynamicConstantNames:
    - WP_DEBUG
    - WP_DEBUG_LOG
    - WP_DEBUG_DISPLAY
  ignoreErrors:
    - message: '#Dynamic call to static method#'
      path: 'tests/tests'
  strictRules:
    strictCalls: true
